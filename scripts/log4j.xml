<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="false" xmlns:log4j='http://jakarta.apache.org/log4j/' >

    <!-- 
      Enable this appender if you want to see log messages in the console window 
      You need to un-comment the line <appender-ref ref="STDOUT"/> in the <root> tag as well
    -->
    <!--
    <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} %-5p %m%n" />
        </layout>
    </appender>
    -->
    
    <!-- 
        Define an appender that writes to a file
        SQL Workbench/J will define the system properties workbench.config.dir and
        workbench.install.dir so the output file can be specified relative to either 
        the config directory or the directory where sqlworkbench.jar is located
    -->
    <appender name="FILE" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="${workbench.config.dir}/log4j.log" />
        <param name="maxFileSize" value="100KB" />
        <param name="maxBackupIndex" value="5" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} %-5p %m%n" />
        </layout>
    </appender>
    
    <root>
        <priority value="info"/>
        <!-- <appender-ref ref="STDOUT" /> -->
        <appender-ref ref="FILE" />
    </root>
    
    <loggerFactory class="org.apache.log4j.Log4JLoggerFactory" />

</log4j:configuration>




